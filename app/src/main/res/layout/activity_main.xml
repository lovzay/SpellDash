<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/splash_background">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SpellDash"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"

        android:textColor="#de9100"
        android:textStyle="bold"
        android:textSize="60sp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="40"
        android:shadowColor="#757575"
        />
    
    <Button
        android:id="@+id/menu_easy_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/splash_title"
        android:layout_centerHorizontal="true"
        android:text="Easy"
        android:textSize="25sp"
        android:textColor="#006b8e"
        android:background="@drawable/custom_easy_button"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/menu_avg_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/menu_easy_btn"
        android:layout_centerHorizontal="true"
        android:text="Average"
        android:textSize="25sp"
        android:textColor="#006b8e"
        android:background="@drawable/custom_avg_button"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/menu_diff_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/menu_avg_btn"
        android:layout_centerHorizontal="true"
        android:text="Difficult"
        android:textSize="25sp"
        android:textColor="#006b8e"
        android:background="@drawable/custom_diff_button"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        />

    

</RelativeLayout>